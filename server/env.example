# Backend Environment Variables
# Copy this to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_token_here

# MealDB Configuration (optional - can be public)
MEALDB_API_KEY=your_mealdb_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3003

# Supabase (server-side)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Optional admin secret to protect ingestion endpoint
INGEST_ADMIN_SECRET=change_me_strong_secret
